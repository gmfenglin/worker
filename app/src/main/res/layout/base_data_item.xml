<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/base_data_item_tv_name"
    android:layout_alignParentStart="true"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="36dp" />
    <ImageButton
        android:layout_width="36dp"
        android:id="@+id/base_data_item_ib_edit"
        android:layout_toLeftOf="@+id/base_data_item_switch_status"
        android:background="@drawable/edit_select"
        android:layout_marginRight="8dp"
        android:layout_height="36dp" />
    <Switch
        android:id="@+id/base_data_item_switch_status"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:layout_width="48dp"
        android:layout_height="36dp" />
</RelativeLayout>
